<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Alerts and Notifications"
        android:key="alerts_category">
        <Preference android:title="Alerts"
            android:key="alerts" >
            <intent
                android:action="android.intent.action.MAIN"
                android:targetPackage="com.dexdrip.stephenblack.nightwatch"
                android:targetClass="com.dexdrip.stephenblack.nightwatch.alerts.AlertList"
                />
        </Preference>
        <CheckBoxPreference
            android:key="bg_ongoing"
            android:title="Persistent Notification"
            android:summary="Display current BG in notification area."
            android:defaultValue="false" />


    </PreferenceCategory>
</PreferenceScreen>

